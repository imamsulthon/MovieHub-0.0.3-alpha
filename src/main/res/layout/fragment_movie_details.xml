<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/detail_backdrop_height"
        android:elevation="0dp"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:collapsedTitleTextAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">

            <FrameLayout
                android:id="@+id/backdrop_fl"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/grey_300"
                android:fitsSystemWindows="true"
                android:foreground="@drawable/backdrop_scrim_dark"
                app:layout_collapseMode="parallax">

                <ImageView
                    android:id="@+id/backdrop_iv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" />

            </FrameLayout>

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@null"
                app:contentInsetRight="16dp"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nsv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:fitsSystemWindows="true"
        app:behavior_overlapTop="156dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:descendantFocusability="blocksDescendants"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/movie_poster_iv"
                    android:layout_width="104dp"
                    android:layout_height="156dp"
                    android:background="@drawable/gradient_bg"
                    android:scaleType="centerCrop"
                    android:transitionName="@string/transition_movie_thumbnail" />

                <LinearLayout
                    android:id="@+id/movie_details_header_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:gravity="center"
                    android:background="@color/grey_400"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <com.etiennelawlor.moviehub.ui.CustomFontTextView
                        android:id="@+id/title_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:ellipsize="end"
                        android:maxLines="3"
                        android:textColor="@color/primary_text_dark"
                        android:textSize="18sp"
                        tools:text="Movie Title"
                        app:textFont="lato_medium" />

                    <com.etiennelawlor.moviehub.ui.CustomFontTextView
                        android:id="@+id/votingAverage_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="end"
                        android:textColor="@color/primary_text_dark"
                        android:textSize="14sp"
                        tools:text="10/10"
                        app:textFont="lato_medium"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/movie_details_body_ll"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/grey_500"
                    android:padding="16dp">

                    <com.etiennelawlor.moviehub.ui.CustomFontTextView
                        android:id="@+id/rating_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="16dp"
                        android:background="@drawable/rating_bg"
                        android:textColor="@color/secondary_text_light"
                        android:textSize="12sp"
                        app:textFont="lato_black" />

                    <com.etiennelawlor.moviehub.ui.CustomFontTextView
                        android:id="@+id/genres_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignWithParentIfMissing="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="16dp"
                        android:layout_toLeftOf="@+id/duration_tv"
                        android:layout_toRightOf="@id/rating_tv"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:textColor="@color/secondary_text_light"
                        android:textSize="12sp"
                        app:textFont="lato_medium" />

                    <com.etiennelawlor.moviehub.ui.CustomFontTextView
                        android:id="@+id/duration_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:textColor="@color/secondary_text_light"
                        android:textSize="12sp"
                        app:textFont="lato_medium" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/grey_100"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <com.etiennelawlor.moviehub.ui.CustomFontTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Director"
                        android:textColor="@color/primary_text_dark"
                        android:textSize="16sp"
                        app:textFont="lato_medium" />

                    <com.etiennelawlor.moviehub.ui.CustomFontTextView
                        android:id="@+id/director_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/secondary_text_dark"
                        android:textSize="14sp"
                        app:textFont="lato_light" />

                    <com.etiennelawlor.moviehub.ui.CustomFontTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Overview"
                        android:textColor="@color/primary_text_dark"
                        android:textSize="16sp"
                        app:textFont="lato_medium" />

                    <com.etiennelawlor.moviehub.ui.CustomFontTextView
                        android:id="@+id/tagline_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:textColor="@color/secondary_text_dark"
                        android:textSize="14sp"
                        android:textAllCaps="true"
                        app:textFont="lato_light" />

                    <com.etiennelawlor.moviehub.ui.CustomFontTextView
                        android:id="@+id/overview_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/secondary_text_dark"
                        android:textSize="14sp"
                        app:textFont="lato_light" />

                    <com.etiennelawlor.moviehub.ui.CustomFontTextView
                        android:id="@+id/original_title_label_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:text="Original Title"
                        android:textColor="@color/primary_text_dark"
                        android:textSize="16sp"
                        app:textFont="lato_medium"/>

                    <com.etiennelawlor.moviehub.ui.CustomFontTextView
                        android:id="@+id/original_title_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:textColor="@color/secondary_text_dark"
                        android:textSize="14sp"
                        app:textFont="lato_medium" />

                    <com.etiennelawlor.moviehub.ui.CustomFontTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Status"
                        android:textColor="@color/primary_text_dark"
                        android:textSize="16sp"
                        app:textFont="lato_medium" />

                    <com.etiennelawlor.moviehub.ui.CustomFontTextView
                        android:id="@+id/status_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/secondary_text_dark"
                        android:textSize="14sp"
                        app:textFont="lato_medium" />

                    <com.etiennelawlor.moviehub.ui.CustomFontTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Release Date"
                        android:textColor="@color/primary_text_dark"
                        android:textSize="16sp"
                        app:textFont="lato_medium" />

                    <com.etiennelawlor.moviehub.ui.CustomFontTextView
                        android:id="@+id/release_date_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/secondary_text_dark"
                        android:textSize="14sp"
                        app:textFont="lato_medium" />

                    <com.etiennelawlor.moviehub.ui.CustomFontTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Budget"
                        android:textColor="@color/primary_text_dark"
                        android:textSize="16sp"
                        app:textFont="lato_medium" />

                    <com.etiennelawlor.moviehub.ui.CustomFontTextView
                        android:id="@+id/budget_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/secondary_text_dark"
                        android:textSize="14sp"
                        app:textFont="lato_medium" />

                    <com.etiennelawlor.moviehub.ui.CustomFontTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Revenue"
                        android:textColor="@color/primary_text_dark"
                        android:textSize="16sp"
                        app:textFont="lato_medium" />

                    <com.etiennelawlor.moviehub.ui.CustomFontTextView
                        android:id="@+id/revenue_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/secondary_text_dark"
                        android:textSize="14sp"
                        app:textFont="lato_medium" />

                </LinearLayout>

            </LinearLayout>

            <ViewStub
                android:id="@+id/cast_vs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout="@layout/cast_layout" />

            <ViewStub
                android:id="@+id/crew_vs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout="@layout/crew_layout" />

            <ViewStub
                android:id="@+id/similar_movies_vs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout="@layout/similar_movies_layout" />

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>